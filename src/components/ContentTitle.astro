---
const { title, rubi, isLeft } = Astro.props;
const rubiClass = isLeft ? 'rubi rubi--left' : 'rubi rubi--right';
---

<div class="unitTitle">
  <div class="titleSet">
    <div class="title">{title}</div>
    <h3 class={rubiClass}>{rubi}</h3>
  </div>
</div>

<style>
  .unitTitle { padding: 0 40px; }
  .unitTitle .title { font-size: 80px; }
  h3 { margin: 0; padding: 0; }
</style>